<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_main_item_laucher"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_main_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_main_item_laucher"
        android:layout_toLeftOf="@+id/tv_main_item_download"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:text="app name"/>

    <TextView
        android:id="@+id/tv_main_item_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_main_item_upload"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:text="download"/>

    <TextView
        android:id="@+id/tv_main_item_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:text="upload"/>

</RelativeLayout>